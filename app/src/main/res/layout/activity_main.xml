<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"

            android:layout_centerHorizontal="true"

            android:background="@drawable/secondgradient">

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageViewCadastro"

            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"

            app:srcCompat="@drawable/interrogacaoicon" />

        <EditText

                android:id="@+id/editTextNome"

                android:layout_width="300dp"
                android:layout_height="30dp"

                android:layout_below="@+id/imageViewCadastro"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="220dp"

                android:background="@drawable/customedittext"
                android:drawableLeft="@drawable/ic_usuario_custom"
                android:drawablePadding="10dp"

                android:ems="10"
                android:hint="Nome de usuÃ¡rio"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />

        <EditText
                android:id="@+id/editTextEmail"

                android:layout_width="300dp"
                android:layout_height="30dp"

                android:layout_below="@+id/editTextNome"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"

                android:background="@drawable/customedittext"
                android:drawableLeft="@drawable/ic_email_custom"
                android:drawablePadding="10dp"

                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName"

                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp" />

        <EditText
                android:id="@+id/editTextTelefone"

                android:layout_width="300dp"
                android:layout_height="30dp"

                android:layout_below="@+id/editTextEmail"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"

                android:background="@drawable/customedittext"
                android:drawableLeft="@drawable/ic_telefone_custom"
                android:drawablePadding="10dp"

                android:ems="10"
                android:hint="Telefone"
                android:inputType="numberDecimal"

                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp" />

        <EditText
                android:id="@+id/editTextSenha"

                android:layout_width="300dp"
                android:layout_height="30dp"

                android:layout_below="@+id/editTextTelefone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"

                android:background="@drawable/customedittext"

                android:drawableLeft="@drawable/ic_senha_custom"
                android:drawablePadding="10dp"

                android:ems="10"
                android:hint="senha"
                android:inputType="textPassword"

                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp" />

        <Button
            android:id="@+id/botaCadastro"

            android:layout_width="250dp"
            android:layout_height="45dp"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="690dp"

            android:background="@drawable/buttonalterperfil"

            android:text="Entrar"
            android:textColor="#3F4743"
            android:textSize="14sp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>