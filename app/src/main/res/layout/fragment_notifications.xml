<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="630dp"
            android:layout_centerInParent="true"

            android:background="@drawable/relativelayoutcustom">

            <TextView
                android:id="@+id/textClassificados"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"

                android:text="Mais conhecidos"
                android:textSize="20dp"
                android:textColor="#000000"
                android:typeface="normal"
                />

            <TextView
                android:id="@+id/textView5"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="120dp"
                android:layout_marginTop="163dp"

                android:text="Jorge Amado"
                android:textSize="20dp"
                android:textColor="#000000"
                android:typeface="normal"/>

            <ImageView
                android:id="@+id/imageView"

                android:layout_width="72dp"
                android:layout_height="58dp"

                android:layout_marginLeft="30dp"
                android:layout_marginTop="150dp"
                android:src="@drawable/ic_usuarios_box"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:background="#1E9565">

                <Button
                    android:id="@+id/buttonGrupo"

                    android:layout_width="120dp"
                    android:layout_height="45dp"

                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="12dp"

                    android:background="@drawable/buttonalterperfil"
                    android:text="Grupo" />

                <Button
                    android:id="@+id/buttonUsuario"

                    android:layout_width="120dp"
                    android:layout_height="45dp"

                    android:background="@drawable/buttonalterperfil"

                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="12dp"

                    android:text="UsuÃ¡rio"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:typeface="normal"/>


            </RelativeLayout>

            <ImageView
                android:id="@+id/imagem_setabaixo"

                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_toRightOf="@+id/textClassificados"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="5dp"

                android:src="@drawable/ic_setabaixo" />


        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>